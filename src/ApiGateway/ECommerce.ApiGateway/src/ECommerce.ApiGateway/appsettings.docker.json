{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "yarp": {
    "clusters": {
      "catalogs": {
        "loadBalancingPolicy": "RoundRobin",
        "destinations": {
          "destination1": {
            "address": "http://catalogs:4000"
          }
        }
      },
      "identity": {
        "loadBalancingPolicy": "RoundRobin",
        "destinations": {
          "destination1": {
            "address": "http://identity:7000"
          }
        }
      },
      "customers": {
        "loadBalancingPolicy": "RoundRobin",
        "destinations": {
          "destination1": {
            "address": "http://customers:6000"
          }
        }
      }
    }
  }
}
