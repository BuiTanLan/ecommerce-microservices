{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "yarp": {
    "routes": {
      "catalogs": {
        "clusterId": "catalogs",
        "match": {
          "path": "api/v1/catalog/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern": "{**catch-all}"
          },
          { "RequestHeadersCopy": "true" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "identity": {
        "clusterId": "identity",
        "match": {
          "path": "api/v1/identity/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern": "{**catch-all}"
          },
          { "RequestHeadersCopy": "true" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "customers": {
        "clusterId": "customers",
        "match": {
          "path": "api/v1/customer/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern": "{**catch-all}"
          },
          { "RequestHeadersCopy": "true" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      }
    },
    "clusters": {
      "catalogs": {
        "loadBalancingPolicy": "RoundRobin",
        "destinations": {
          "destination1": {
            "address": "https://localhost:4001"
          },
          "destination2": {
            "address": "http://localhost:4000"
          }
        }
      },
      "identity": {
        "loadBalancingPolicy": "RoundRobin",
        "destinations": {
          "destination1": {
            "address": "https://localhost:7001"
          },
          "destination2": {
            "address": "http://localhost:7000"
          }
        }
      },
      "customers": {
        "loadBalancingPolicy": "RoundRobin",
        "destinations": {
          "destination1": {
            "address": "https://localhost:6001"
          }
        }
      }
    }
  }
}
